<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">

    <!-- background color-->
    <solid
        android:color="@color/color_input_text" >
    </solid>

    <!-- stroke -->
    <stroke
        android:width="@dimen/width_border_edittext"
        android:color="@color/transparent" >
    </stroke>

    <!-- padding-->
    <padding
        android:left="@dimen/padding_left_text"
        android:top="0dp"
        android:right="@dimen/padding_right_text"
        android:bottom="0dp" >
    </padding>

    <!-- radius -->
    <corners
        android:radius="@dimen/radius_border_edittext" >
    </corners>

</shape>